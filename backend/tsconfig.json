{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "strict": false,
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@util/*": ["util/*"],
      "@routes/*": ["routes/*"]
    },
    "esModuleInterop": true
  },
  "include": ["./src"]
}